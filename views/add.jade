extends layout

block page
	- var menu = 'add'

block content
	h2 Add A Profile
	div= error
	div.col-md-8
		form(action'/post', method='post' role='form')
			div.form-group
				label(for='title') Title
				input#title.form-control(name='title', type='text', placeholder='Punky The Cat')
			div.form-group
				label(for='slug') Slug
				input#title.form-control(name='slug', type='text', placeholder='punky')
				span.help-block This string used in the URL for this profile.
			div.form-group
				label(for='text') Text
				textarea#text.form-control(rows='5', name='text', placeholder='text')
			p
				button.btn-primary(type='submit') Save Profile
